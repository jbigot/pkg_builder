#!/bin/bash
trap 'echo received signal, quitting...; exit 1' INT TERM
set -ex

if [ -d /localrepo/repodata ]
then
cat<<EOF > /tmp/localrepo.repo
[localrepo]
name=localrepo
type=rpm-md
baseurl=file:///localrepo/
gpgcheck=0
enabled=1
EOF
dnf config-manager --add-repo /tmp/localrepo.repo \
|| dnf config-manager addrepo --from-repofile=/tmp/localrepo.repo \
|| true
fi

dnf upgrade -y || yum upgrade -y

dnf builddep -y --setopt=tsflags=nodocs --setopt=install_weak_deps=False --best /src/*.spec

# re-read profile after installation to load any new env
set +e
. /etc/profile
set -e

mkdir -p "/tmp/BUILD" "/tmp/output" "/tmp/output/src"
rpmbuild \
	--define "_topdir    /tmp" \
	--define "_tmppath   %{_topdir}" \
	--define "_builddir  %{_topdir}/BUILD" \
	--define "_sourcedir /src" \
	--define "_specdir   /src" \
	--define "_rpmdir    /tmp/output" \
	--define "_srcrpmdir %{_rpmdir}/src" \
	-ba /src/*.spec
chown -R $(stat -c '%u:%g' /src) /tmp/output
find /tmp/output -type f -name '*.rpm' -execdir mv -t /output -- '{}' '+'
