#!/bin/bash
trap 'echo received signal, quitting...; exit 1' INT TERM
set -xe

bgrun() {
"$@" &
wait "$!"
}

cat<<EOF > /tmp/localrepo.repo
[localrepo]
name=localrepo
type=rpm-md
baseurl=file:///localrepo/
gpgcheck=0
enabled=1
EOF
yum-config-manager --add-repo /tmp/localrepo.repo

cd /tmp
bgrun yum-builddep -y /src/*.spec

bgrun rpmbuild \
	--define "_topdir    /tmp" \
	--define "_builddir  %{_topdir}/BUILD" \
	--define "_rpmdir    %{_topdir}/output" \
	--define "_sourcedir %{_topdir}/SOURCES" \
	--define "_specdir   /src" \
	--define "_srcrpmdir %{_topdir}/output" \
	--define "_tmppath   tmp" \
	--undefine=_disable_source_fetch \
	-ba /src/*.spec
find /tmp/output -type f -execdir chown "$(stat -c '%u:%g' "/src")" '{}' '+' 
find /tmp/output -type f -execdir mv '{}' /src ';'
